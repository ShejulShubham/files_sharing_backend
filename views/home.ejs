<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>File Sharing App - Home</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #111;
        color: #eee;
      }
      .container {
        margin-top: 10vh;
        text-align: center;
      }
      .action-btn {
        padding: 2rem;
        border-radius: 12px;
        border: 2px dashed #777;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-block;
        width: 280px;
        margin: 1rem;
      }
      .action-btn:hover {
        background-color: #222;
        border-color: #0dcaf0;
      }
      .spinner-border {
        width: 2rem;
        height: 2rem;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4">üìÇ File Sharing App</h1>
      <p>Select an action to begin:</p>

      <div>
        <button id="browseBtn" class="action-btn btn btn-outline-info">
          <i class="fas fa-folder-tree fa-lg me-2"></i> Select folder to share
        </button>

        <button id="stopBtn" class="action-btn btn btn-outline-danger">
          <i class="fas fa-power-off fa-lg me-2"></i> Stop the background process
        </button>
      </div>

      <div id="statusMsg" class="mt-4 text-warning d-none">
        <div class="spinner-border text-info" role="status">
          <span class="visually-hidden">Loading...</span>
        </div>
        <div>Working...</div>
      </div>
    </div>

    <script>
      const status = document.getElementById("statusMsg");
      document.getElementById("browseBtn").addEventListener("click", () => {
        status.classList.remove("d-none");
        status.innerHTML = "üìÇ Opening folder browser...";
        setTimeout(() => {
          window.location.href = "/browse?path=" + "/";
        }, 500);
      });

      document.getElementById("stopBtn").addEventListener("click", async () => {
        if (!confirm("Are you sure you want to stop the server?")) return;

        status.classList.remove("d-none");
        status.innerHTML = "üõë Shutting down...";

        try {
          await fetch("/shutdown", { method: "POST" });
          status.innerHTML =
            "‚úÖ Server stopped. You can now close this window.";
        } catch (err) {
          status.innerHTML = "‚ùå Failed to stop server.";
        }
      });
    </script>
  </body>
</html>
