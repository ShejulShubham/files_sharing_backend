<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>File Browser</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />
    <style>
      .breadcrumb {
        flex-wrap: wrap;
        font-size: 0.95rem;
      }

      .breadcrumb-item a {
        text-decoration: none;
      }
    </style>
  </head>
  <body class="bg-dark text-light">
    <div class="container py-4">
      <!-- Header & QR Button -->
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">
          <i class="fas fa-folder-open"></i>
          File Explorer
        </h2>
        <button onclick="showQRCode()" class="btn btn-outline-info btn-sm" title="Share via QR">
          <i class="fas fa-qrcode"> Share via QR</i>
        </button>
      </div>

      <!-- Breadcrumb -->
      <% if (path) {
           const parts = path.split('/').filter(Boolean);
           let partial = '';
      %>
      <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb bg-transparent p-0 m-0">
          <li class="breadcrumb-item">
            <a href="/" class="text-light">Home</a>
          </li>
          <% parts.forEach((part, index) => {
               partial += '/' + part;
               const isLast = index === parts.length - 1;
          %>
          <li class="breadcrumb-item <%= isLast ? 'active text-warning' : '' %>">
            <% if (isLast) { %><%= part %><% } else { %>
              <a href="/files?path=<%= encodeURIComponent(partial) %>" class="text-light"><%= part %></a>
            <% } %>
          </li>
          <% }) %>
        </ol>
      </nav>
      <% } %>

      <!-- File and Folder List -->
      <% if (entries.length === 0) { %>
        <div class="alert alert-warning">üìÅ This folder is empty.</div>
      <% } else { %>
        <ul class="list-group">
          <% entries.forEach(entry => { %>
            <li class="list-group-item bg-dark text-light border-secondary d-flex justify-content-between align-items-center">
              <div>
                <% if (entry.isDir) { %>
                  <i class="fas fa-folder text-warning me-2"></i>
                  <a href="/files?path=<%= entry.encodedPath %>" class="text-light text-decoration-none">
                    <%= entry.name %>
                  </a>
                <% } else { %>
                  <i class="fas fa-file text-muted me-2"></i>
                  <a href="/file?path=<%= entry.encodedPath %>" class="text-light text-decoration-none">
                    <%= entry.name %>
                  </a>
                <% } %>
              </div>
              <% if (!entry.isDir) { %>
                <a href="/download?path=<%= entry.encodedPath %>" class="btn btn-sm btn-outline-light">
                  <i class="fas fa-download"></i>
                </a>
              <% } %>
            </li>
          <% }); %>
        </ul>
      <% } %>

      <!-- QR Code Modal -->
      <div class="modal fade" id="qrModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-sm modal-dialog-centered">
          <div class="modal-content bg-dark text-light text-center p-3">
            <div class="modal-header border-0 pb-0">
              <h5 class="modal-title w-100 text-center">Share via QR</h5>
              <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
              <div id="qrCodeCanvas"></div>
              <div id="offlineMsg" class="text-danger mt-2 d-none">
                ‚ùå You are offline. Connect to internet to scan this QR.
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/qrcode/build/qrcode.min.js"></script>
    <script>
      function showQRCode() {
        const qrModal = new bootstrap.Modal(document.getElementById("qrModal"));
        const qrDiv = document.getElementById("qrCodeCanvas");
        const offlineMsg = document.getElementById("offlineMsg");

        qrDiv.innerHTML = "";

        const ip = "<%= localIP %>"; // from server
        const port = location.port || "<%= port %>";
        const path = location.pathname + location.search;
        const fullURL = `${location.protocol}//${ip}:${port}${path}`;

        if (navigator.onLine) {
          offlineMsg.classList.add("d-none");
          QRCode.toCanvas(
            document.createElement("canvas"),
            fullURL,
            { width: 200 },
            function (err, canvas) {
              if (!err) qrDiv.appendChild(canvas);
            }
          );
        } else {
          offlineMsg.classList.remove("d-none");
        }

        qrModal.show();
      }
    </script>
  </body>
</html>
