<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>File Browser</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/qrcode/build/qrcode.min.js"></script>
    <style>
      .card-title {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        display: block;
        max-width: 100%;
      }

      .tooltip-wrap {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
      }

      .qr-icon {
        font-size: 1.2rem;
        cursor: pointer;
        color: white;
      }

      .modal-content {
        background-color: #2c2c2c;
        color: white;
      }
    </style>
  </head>
  <body class="bg-dark text-light">
    <div class="container py-4">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">
          <a href="/" class="text-light text-decoration-none">
            <i class="fas fa-folder-open me-2"></i> File Browser
          </a>
        </h2>
        <button class="btn btn-outline-light btn-sm" onclick="showQRCode()" title="Share this page via QR Code">
          <i class="fas fa-qrcode qr-icon"> Scan QR</i>
        </button>
      </div>

      <!-- Breadcrumb -->
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Home</a></li>
          <% if (path) {
            const parts = path.split('/').filter(Boolean);
            let partial = ''; %>
            <% parts.forEach((part, index) => {
              partial += '/' + part;
              const isLast = index === parts.length - 1; %>
              <li class="breadcrumb-item <%= isLast ? 'active' : '' %>" aria-current="page">
                <% if (isLast) { %><%= part %><% } else { %>
                  <a href="/files?path=<%= encodeURIComponent(partial) %>" class="text-decoration-none"><%= part %></a>
                <% } %>
              </li>
            <% }); %>
          <% } %>
        </ol>
      </nav>

      <% if (path) { %>
        <a href="/files?path=<%= encodeURIComponent(path.split('/').slice(0, -1).join('/')) %>" class="btn btn-outline-light mb-4">
          <i class="fas fa-arrow-left me-1"></i> Back
        </a>
      <% } %>

      <% if (entries.length === 0) { %>
        <div class="alert alert-warning">This folder is empty.</div>
      <% } %>

      <div class="row">
        <% entries.forEach(entry => { %>
          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card bg-secondary h-100">
              <div class="card-body d-flex justify-content-between align-items-center">
                <div class="tooltip-wrap" title="<%= entry.name %>">
                  <h5 class="card-title mb-0">
                    <a href="<%= entry.isDir ? '/files?path=' + entry.encodedPath : '/file?path=' + entry.encodedPath %>" class="text-light text-decoration-none">
                      <i class="fas <%= entry.isDir ? 'fa-folder' : 'fa-file' %> me-2"></i>
                      <%= entry.name %>
                    </a>
                  </h5>
                  <small class="text-muted">[<%= entry.isDir ? 'folder' : 'file' %>]</small>
                </div>
                <% if (!entry.isDir) { %>
                  <a href="/download?path=<%= entry.encodedPath %>" class="btn btn-outline-light btn-sm ms-2" title="Download">
                    <i class="fas fa-download"></i>
                  </a>
                <% } %>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>

    <!-- QR Code Modal -->
    <div class="modal fade" id="qrModal" tabindex="-1" aria-labelledby="qrModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content text-center p-4">
          <h5 class="modal-title mb-3" id="qrModalLabel">Scan to open this page</h5>
          <canvas id="qrCanvas" class="mx-auto"></canvas>
          <button type="button" class="btn btn-outline-light mt-3" data-bs-dismiss="modal">
            Close
          </button>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      function showQRCode() {
        const currentUrl = window.location.href;
        const canvas = document.getElementById("qrCanvas");
        canvas.innerHTML = "";
        QRCode.toCanvas(canvas, currentUrl, { width: 200 }, function (error) {
          if (error) console.error(error);
        });
        const modal = new bootstrap.Modal(document.getElementById("qrModal"));
        modal.show();
      }
    </script>
  </body>
</html>
