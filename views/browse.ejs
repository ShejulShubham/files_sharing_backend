<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Browse Directories</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />
    <style>
      body {
        background-color: #111;
        color: #eee;
      }
      .folder-link {
        color: #0dcaf0;
        text-decoration: none;
      }
      .folder-link:hover {
        text-decoration: underline;
      }
      .share-btn {
        margin-left: 1rem;
      }
      .breadcrumb a {
        color: #0dcaf0;
        text-decoration: none;
      }
      .breadcrumb a:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body class="bg-dark text-light">
    <div class="container mt-5">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0"><i class="fas fa-folder-tree"></i> Select folder to share</h1>
        <a href="/" class="btn btn-outline-light btn-sm me-2" title="Home">
          <i class="fas fa-home"></i>
        </a>
      </div>
      <h2><i class="fas fa-folder"></i> File Path: <code><%= currentPath %></code></h2>

      <!-- Breadcrumb Navigation -->
      <nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="/browse?path=/">/</a>
          </li>
          <% breadcrumbs.forEach((crumb, i) => { %>
          <li class="breadcrumb-item">
            <a href="/browse?path=<%= encodeURIComponent(crumb.path) %>">
              <%= crumb.name %>
            </a>
          </li>
          <% }) %>
        </ol>
      </nav>

      <!-- Folder List -->
      <ul class="list-group mt-4">
        <% if (entries.length === 0) { %>
        <li class="list-group-item bg-dark text-light">Empty folder</li>
        <% } %> <% entries.forEach(entry => { if (entry.isDir) { %>
        <li
          class="list-group-item bg-dark text-light d-flex justify-content-between align-items-center"
        >
          <div>
            <a
              class="folder-link"
              href="/browse?path=<%= encodeURIComponent(path.join(currentPath, entry.name)) %>"
            >
              <i class="fas fa-folder"></i> <%= entry.name %>
            </a>
          </div>
          <form
            onsubmit="return shareFolder(event, '<%= path.join(currentPath, entry.name).replace(/\\/g, '/') %>')"
          >
            <button
              type="submit"
              class="btn btn-outline-success btn-sm share-btn"
            >
              <i class="fas fa-share"></i> Share This Folder
            </button>
          </form>
        </li>
        <% } }); %>
      </ul>
    </div>

    <script>
      async function shareFolder(event, folderPath) {
        event.preventDefault();

        try {
          const res = await fetch("/pick-folder", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
              Accept: "application/json", // ✅ Required
            },
            body: JSON.stringify({ path: folderPath }),
          });

          const data = await res.json(); // ✅ Now this works
          if (data.success) {
            window.open(`/files?path=${encodeURIComponent("")}`, "_blank");
          } else {
            alert("Failed to share folder: " + (data.error || "Unknown error"));
          }
        } catch (err) {
          alert("Error: " + err.message);
        }

        return false;
      }
    </script>
  </body>
</html>