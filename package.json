{
  "name": "files_sharing_backend",
  "version": "0.0.1",
  "description": "File sharing app with GUI using Electron",
  "main": "electron-main.js",
  "author": "Shubham Shejul <shejulshubhamdeshmukh@gmail.com>",
  "license": "ISC",
  "scripts": {
    "dev": "node --watch server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder -wl"
  },
  "dependencies": {
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "open": "^10.1.2",
    "serve-index": "^1.9.1"
  },
  "devDependencies": {
    "electron": "^37.2.1",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.yourdomain.filesharingapp",
    "productName": "FileSharingApp",
    "files": [
      "!server.js",
      "!node_modules",
      "!views",
      "package.json",
      "assets/**/*",
      "electron-main.js"
    ],
    "extraResources": [
      {
        "from": "server.js",
        "to": "server.js"
      },
      {
        "from": "node_modules",
        "to": "node_modules"
      },
      {
        "from": "views",
        "to": "views"
      },
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "target": "nsis"
    }
  }
}