<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>File Browser</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />
    <style>
      body {
        background-color: #111;
        color: #eee;
      }

      .breadcrumb {
        flex-wrap: wrap;
        font-size: 0.95rem;
      }

      .breadcrumb-item a {
        text-decoration: none;
        color: #0dcaf0;
      }

      .breadcrumb-item.active {
        color: #ffc107;
      }

      .file-entry {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.3rem;
      }

      .file-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
        gap: 1rem;
      }

      .file-card {
        background-color: #1f1f1f;
        border: 1px solid #444;
        padding: 10px;
        border-radius: 8px;
        text-align: center;
        word-wrap: break-word;
        overflow: hidden;
        transition: background-color 0.2s;
      }

      .file-card:hover {
        background-color: #2a2a2a;
      }

      .file-icon {
        font-size: 1.8rem;
        margin-bottom: 5px;
      }

      .file-name {
        font-size: 0.9rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      .ip-address {
        overflow: hidden;
        text-overflow: ellipsis;
      }

      @media (min-width: 576px) {
        .file-entry {
          flex-direction: row;
          align-items: center;
          justify-content: space-between;
        }
      }
    </style>
  </head>
  <body class="bg-dark text-light">
    <div class="container py-4">
      <!-- Header & QR Button -->
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0"><i class="fas fa-folder-open"></i> File Explorer</h2>
        <button
          onclick="showQRCode()"
          class="btn btn-outline-info btn-sm"
          title="Share via QR"
        >
          <i class="fas fa-qrcode"></i> Share via QR
        </button>
      </div>

      <!-- Toggle View -->
      <div class="d-flex flex-row-reverse gap-2">
        <button
          onclick="toggleView()"
          class="btn btn-outline-light btn-sm m-3"
          title="Toggle View"
        >
          <i class="fas fa-th" id="toggleIcon"></i> Toggle view
        </button>
      </div>

      <!-- Breadcrumb -->
      <% if (path) { const parts = path.split('/').filter(Boolean); let partial
      = ''; %>
      <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb bg-transparent p-0 m-0">
          <li class="breadcrumb-item">
            <a href="/files" class="text-light">Home</a>
          </li>
          <% parts.forEach((part, index) => { partial += '/' + part; const
          isLast = index === parts.length - 1; %>
          <li
            class="breadcrumb-item <%= isLast ? 'active text-warning' : '' %>"
          >
            <% if (isLast) { %> <%= part %> <% } else { %>
            <a
              href="/files?path=<%= encodeURIComponent(partial) %>"
              class="text-light"
              ><%= part %></a
            >
            <% } %>
          </li>
          <% }) %>
        </ol>
      </nav>
      <% } %>

      <!-- Files/Folders Display -->
      <% if (entries.length === 0) { %>
      <div class="alert alert-warning">üìÅ This folder is empty.</div>
      <% } else { %>

      <!-- GRID VIEW -->
      <div id="gridView" class="file-grid">
        <% entries.forEach(entry => { %>
        <div class="file-card">
          <% if (entry.isDir) { %>
          <a
            href="/files?path=/<%= entry.encodedPath %>"
            class="text-light text-decoration-none"
            title="<%= entry.name %>"
          >
            <div class="file-icon text-warning">
              <i class="fas fa-folder"></i>
            </div>
            <div class="file-name"><%= entry.name %></div>
          </a>
          <% } else { %>
          <a
            href="/file?path=<%= entry.encodedPath %>"
            class="text-light text-decoration-none"
            title="<%= entry.name %>"
          >
            <div class="file-icon text-muted"><i class="fas fa-file"></i></div>
            <div class="file-name"><%= entry.name %></div>
          </a>
          <div class="mt-2">
            <a
              href="/download?path=<%= entry.encodedPath %>"
              class="btn btn-sm btn-outline-light"
              title="Download"
            >
              <i class="fas fa-download"></i>
            </a>
          </div>
          <% } %>
        </div>
        <% }) %>
      </div>

      <!-- LIST VIEW -->
      <ul id="listView" class="list-group d-none">
        <% entries.forEach(entry => { %>
        <li
          class="list-group-item bg-dark text-light border-secondary d-flex justify-content-between align-items-center"
        >
          <div
            class="d-flex align-items-center overflow-hidden"
            style="gap: 8px"
          >
            <% if (entry.isDir) { %>
            <i class="fas fa-folder text-warning"></i>
            <a
              href="/files?path=<%= entry.encodedPath %>"
              class="text-light text-decoration-none text-truncate"
              title="<%= entry.name %>"
            >
              <%= entry.name %>
            </a>
            <% } else { %>
            <i class="fas fa-file text-muted"></i>
            <a
              href="/file?path=<%= entry.encodedPath %>"
              class="text-light text-decoration-none text-truncate"
              title="<%= entry.name %>"
            >
              <%= entry.name %>
            </a>
            <% } %>
          </div>
          <% if (!entry.isDir) { %>
          <a
            href="/download?path=<%= entry.encodedPath %>"
            class="btn btn-sm btn-outline-light"
            title="Download"
          >
            <i class="fas fa-download"></i>
          </a>
          <% } %>
        </li>
        <% }) %>
      </ul>
      <% } %>

      <!-- QR Code Modal -->
      <div class="modal fade" id="qrModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-sm modal-dialog-centered">
          <div class="modal-content bg-dark text-light text-center p-3">
            <div class="modal-header border-0 pb-0">
              <h5 class="modal-title w-100 text-center">Share via QR</h5>
              <button
                type="button"
                class="btn-close btn-close-white"
                data-bs-dismiss="modal"
              ></button>
            </div>
            <br />
            <h6 id="ip-address" class="ip-address d-none"></h6>
            <div class="modal-body">
              <div id="qrCodeCanvas"></div>
              <div id="offlineMsg" class="text-danger mt-2 d-none">
                ‚ùå You are offline. Connect to internet to scan this QR.
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/qrcode/build/qrcode.min.js"></script>
    <script>
      function showQRCode() {
        const qrModal = new bootstrap.Modal(document.getElementById("qrModal"));
        const qrDiv = document.getElementById("qrCodeCanvas");
        const ip_address = document.getElementById("ip-address");
        const offlineMsg = document.getElementById("offlineMsg");

        qrDiv.innerHTML = "";

        const ip = "<%= localIP %>";
        const port = location.port || "<%= port %>";
        const path = location.pathname + location.search;
        const fullURL = `${location.protocol}//${ip}:${port}${path}`;
        ip_address.textContent = fullURL;

        if (navigator.onLine) {
          offlineMsg.classList.add("d-none");
          ip_address.classList.remove("d-none");
          QRCode.toCanvas(
            document.createElement("canvas"),
            fullURL,
            { width: 200 },
            function (err, canvas) {
              if (!err) qrDiv.appendChild(canvas);
            }
          );
        } else {
          ip_address.classList.add("d-none");
          offlineMsg.classList.remove("d-none");
        }

        qrModal.show();
      }

      function toggleView() {
        const grid = document.getElementById("gridView");
        const list = document.getElementById("listView");
        const icon = document.getElementById("toggleIcon");

        grid.classList.toggle("d-none");
        list.classList.toggle("d-none");

        if (grid.classList.contains("d-none")) {
          icon.classList.remove("fa-th");
          icon.classList.add("fa-list");
        } else {
          icon.classList.remove("fa-list");
          icon.classList.add("fa-th");
        }
      }

      toggleView();
    </script>
  </body>
</html>
